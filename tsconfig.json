{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "paths": {
            "@angular/core": [
                "node_modules/@angular/core"
            ],
            "@angular/forms": [
                "node_modules/@angular/forms"
            ],
            "google-libphonenumber": [
                "node_modules/google-libphonenumber/dist/libphonenumber.js"
            ],
            "rxjs/*": [
                "node_modules/rxjs/*"
            ]
        },
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules"
        ],
        "types": [
            "jasmine",
            "google-libphonenumber"
        ]
    },
    "files": [
        "index.ts",
        "./tests/util.spec.ts",
        "./tests/password-validators.spec.ts",
        "./tests/email-validators.spec.ts",
        "./tests/creditcard-validators.spec.ts",
        "./tests/universal-validators.spec.ts",
        "./tests/phone-validators.spec.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}